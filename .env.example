# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_URL=mongodb://localhost:27017/baddie-reseller
POSTGRES_URL=postgresql://user:password@localhost:5432/baddie_reseller

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# E-commerce Integration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_SECRET=your_shopify_secret_key
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# Hosting Platforms
WEBFLOW_API_TOKEN=your_webflow_api_token
WEBFLOW_SITE_ID=your_webflow_site_id

FRAMER_API_KEY=your_framer_api_key
FRAMER_PROJECT_ID=your_framer_project_id

HOSTINGER_API_KEY=your_hostinger_api_key
HOSTINGER_USER_ID=your_hostinger_user_id

RAILWAY_API_TOKEN=your_railway_api_token
RAILWAY_PROJECT_ID=your_railway_project_id

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Monitoring
SENTRY_DSN=your_sentry_dsn_url

# Development
DEBUG=baddie-reseller:*
LOG_LEVEL=info