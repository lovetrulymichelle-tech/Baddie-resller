# Environment Configuration
NODE_ENV=development
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/baddie-reseller
DATABASE_URL=mongodb://localhost:27017/baddie-reseller

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# API Keys
OPENAI_API_KEY=your-openai-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Shopify Integration
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_WEBHOOK_SECRET=your-shopify-webhook-secret

# Email Service
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=baddie-reseller-uploads
AWS_REGION=us-east-1

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Hosting Platform APIs
WEBFLOW_API_KEY=your-webflow-api-key
FRAMER_API_KEY=your-framer-api-key
HOSTINGER_API_KEY=your-hostinger-api-key
RAILWAY_API_KEY=your-railway-api-key

# AI/ML Configuration
AI_MODEL_VERSION=gpt-4
INVENTORY_PREDICTION_THRESHOLD=0.8
AUTO_REFILL_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log